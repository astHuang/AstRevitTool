<Page x:Class="AstRevitTool.Masterclass.Dockable.DockablePanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AstRevitTool.Masterclass.Dockable" d:DataContext="{d:DesignInstance Type=local:DockablePanelViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DockablePanelPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Content="Living Room Designer"
               VerticalAlignment="Center"
               FontWeight="Bold"
               FontSize="14"
               Margin="10,0,0,0"
               Padding="0"/>
        <Button Grid.Row="0"
                Content="Load"
                Width="75"
                Height="20"
                HorizontalAlignment="Right"
                Margin="0,0,10,0" 
                Command="{Binding LoadRequirements}"/>
    </Grid>
</Page>
